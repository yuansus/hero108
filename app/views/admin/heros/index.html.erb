<div class="pull-right">
  <%=link_to("魔星下凡",new_admin_hero_path)%>
</div>
<table class="table ">
  <thead>
    <tr>
      <th style="width:220px"></th>
      <th>人物</th>
      <th>花名</th>
      <th>主要事迹</th>
      <th>修改</th>
    </tr>
  </thead>
  <tbody>
    <% @heros.each do |hero| %>
      <tr>
        <td>
          <%=link_to admin_hero_path(hero) do%>
            <% if hero.image.present?%>
              <%=image_tag(hero.image.thumb.url,class:"thumbnail")%>
            <% else %>
              <%=image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail")%>
            <% end %>
          <%end%>
        </td>
        <td><%=hero.name%></td>
        <td><%=hero.alias%></td>
        <td>event...</td>
        <td>
          <%=link_to('edit',edit_admin_hero_path(hero))%> |
          <%=link_to('destroy',admin_hero_path(hero),method: :delete,data:{confirm:"are you sure?"})%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
